<?xml version="1.0" encoding="UTF-8"?>

<pages:PopupPage
    xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:wasted="clr-namespace:Wasted;assembly=Wasted"
    x:Class="Wasted.Pages.Place.OrderStatusPreparedPlacePopup">

    <!--#region Confirmation Popup-->
    <StackLayout Style="{StaticResource DealCardPageViewLayout}"
                 VerticalOptions="Center">
        <StackLayout BackgroundColor="White">

            <Label Text="{Binding  Message}" HorizontalTextAlignment="Center" Margin="0, 30, 0, 0"/>

            <Label Text="Approximate time (min.) for order preparation (optional)" HorizontalTextAlignment="Center" Margin="0, 10, 0, 0"/>
            <wasted:RoundedEntry x:Name="Time" />
            <Label x:Name="ErrorLabel" Text="Only whole numbers are accepted" TextColor="PaleVioletRed" 
                   IsVisible="False" HorizontalTextAlignment="Center"/>

            <Button Text="YES" Clicked="Button_OnClicked" Style="{StaticResource PurchaseButton}"/>

        </StackLayout>
    </StackLayout>
    <!--#endregion-->

</pages:PopupPage>
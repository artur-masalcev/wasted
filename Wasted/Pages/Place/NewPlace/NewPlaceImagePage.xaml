<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wasted.Pages.Place.NewPlace.NewPlaceImagePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Add new place" Style="{StaticResource SectionTitle}"/>
            
            <Label Text="Header image" />
            <Button Text="Choose" Clicked="HeaderButtonClicked" />
            
            <Label Text="Logo image" />
            <Button Text="Choose" Clicked="LogoButtonClicked" />
            
            <Button Text="Done" Style="{StaticResource PurchaseButton}" Clicked="DoneButtonClicked" VerticalOptions="EndAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
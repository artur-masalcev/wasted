<?xml version="1.0" encoding="UTF-8" ?>
<pages:PopupPage
	xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Wasted.Pages.Deals.OrderPopup">

    <!--#region Order view-->
    <StackLayout VerticalOptions="Center">
        <Frame CornerRadius="20" BackgroundColor="White" Margin="8, 0, 8, 0">

            <StackLayout x:Name="orderView">
            <Button Style="{StaticResource CancelButton}" Clicked="OnCancelClicked"  WidthRequest="75"/>

            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Label x:Name="countLabel" Style="{StaticResource RatingLabel}"
                        Text="{Binding SelectedCount, StringFormat='Count: {0}'}" />


                <Stepper x:Name="stepper"
                        Maximum="{Binding Quantity}"
                        Increment="1"
                        ValueChanged="StepperValueChanged"/>

            </StackLayout>

            <Button Style="{StaticResource ConfirmButton}" Clicked="OnConfirmClicked" WidthRequest="220"/>
            </StackLayout>

        </Frame>
    </StackLayout>
    <!--#endregion-->
    
</pages:PopupPage>

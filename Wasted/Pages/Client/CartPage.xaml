<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="Wasted.CartPage">
	<ContentPage.Content>
        <RefreshView x:Name="RefreshView"  RefreshColor="DimGray" Refreshing="RefreshView_Refreshing">
	        <StackLayout>
		        <Label Text="Your cart:"></Label>
		        <CollectionView x:Name="CartDealsCollectionView"
		                        SelectionMode="Single"
		                        ItemsLayout="VerticalList">
					<CollectionView.ItemTemplate>
				        <DataTemplate>
					        <Frame>
								<StackLayout Orientation="Horizontal">
									<Label Text="{Binding Title}" />
									<Label Text="{Binding Quantity, StringFormat='x{0}' }" />
									<Label Text="{Binding Cost, StringFormat='{0} eur.'}" />
								</StackLayout>
					        </Frame>
				        </DataTemplate>
			        </CollectionView.ItemTemplate>
		        </CollectionView>
		        <Label x:Name="Total" />
		        <Button Text="Purchase" Clicked="ClickedPurchase"/>
	        </StackLayout>
        </RefreshView>
    </ContentPage.Content>
</ContentPage>